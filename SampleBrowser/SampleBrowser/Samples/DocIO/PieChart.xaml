<?xml version="1.0" encoding="utf-8" ?>
<local:SamplePage
             xmlns:local="clr-namespace:SampleBrowser;assembly=SampleBrowser"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.PieChart">

  <local:SamplePage.ContentView>
    <StackLayout>
      <StackLayout.BindingContext>
        <local:DocViewModel />
      </StackLayout.BindingContext>
      <Label x:Name="SampleTitle" Text = "Pie Chart"
              FontSize="Large"
              HorizontalOptions="Center"
              VerticalOptions="Center">
      </Label>

      <Label></Label>

      <Label x:Name="Content_1" Text="This sample demonstrates how to insert pie chart into a Word document."
                  FontSize="Medium"  VerticalOptions="Center">
      </Label>

      <Label></Label>

      <Button x:Name="btnGenerate" Command="{Binding PieChartCommand}" Text ="Generate Word" HorizontalOptions="Center" VerticalOptions="Center"></Button>
    </StackLayout>
  </local:SamplePage.ContentView>
  <local:SamplePage.PropertyView>

  </local:SamplePage.PropertyView>

</local:SamplePage>